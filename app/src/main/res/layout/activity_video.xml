<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.VideoActivity">

    <com.aqiang.common.widget.TitleBar
        app:title="视频"
        app:leftIcon="@drawable/ic_action_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.aqiang.common.widget.TitleBar>
    <SurfaceView
        android:layout_weight="10"
        android:id="@+id/sv_act_video"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/bt_act_video_start"
        android:text="开始"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
</LinearLayout>