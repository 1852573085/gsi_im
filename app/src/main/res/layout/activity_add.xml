<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.AddActivity">

    <com.aqiang.common.widget.TitleBar
        app:title="添加"
        app:leftIcon="@drawable/ic_action_back"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.aqiang.common.widget.TitleBar>

    <EditText
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:id="@+id/et_act_add_friends"
        android:background="@android:drawable/edit_text"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<TextView
    android:background="#8D8989"
    android:layout_width="match_parent"
    android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_act_add_phone"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="添加手机联系人"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#8D8989"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="2dp"
        android:background="#8D8989"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_act_add_face"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="面对面加好友"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#8D8989"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/rv_act_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>