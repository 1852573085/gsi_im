<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.SendMsgActivity">
    <com.aqiang.common.widget.TitleBar
        app:leftIcon="@drawable/ic_action_back"
        android:id="@+id/title_act_send_msg_name"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.aqiang.common.widget.TitleBar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_act_send_msg"
        android:background="#C7C0C0"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:background="#C7C0C0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/et_act_send_msg"
            android:layout_weight="10"
            android:layout_marginLeft="20dp"
            android:background="@drawable/et_arc_back"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_act_send_msg"
            android:background="@drawable/bt_send_back"
            android:text="发送"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#C7C0C0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_act_send_msg_wheat"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_wheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_act_send_msg_pic"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_act_send_msg_photo"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>